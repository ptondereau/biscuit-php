{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "ptondereau/biscuit-php",
    "description": "PHP bindings for Biscuit authorization tokens",
    "license": "Apache-2.0",
    "type": "php-ext",
    "authors": [
        {
            "name": "Pierre Tondereau",
            "email": "pierre.tondereau@protonmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Biscuit\\": "stubs/Biscuit/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Biscuit\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "carthage-software/mago": "^1.0.0-beta.34"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "php-ext": {
        "build-path": "pie",
        "extension-name": "biscuit",
        "configure-options": [
            {
                "name": "debug",
                "description": "Build in debug mode",
                "needs-value": false
            }
        ]
    }
}